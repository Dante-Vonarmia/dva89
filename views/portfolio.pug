extends layout

block content
	section.jumbotron.full-height(data-pages='parallax')
		.inner.full-height
			//- BEGIN SLIDER
			#hero.swiper-container
				.swiper-wrapper
					//- BEGIN SLIDE
					.swiper-slide.fit.bg-info
						//- BEGIN IMAGE PARRALAX
						.slider-wrapper
							.background-wrapper(data-swiper-parallax='20%')
								//- YOUR BACKGROUND IMAGE HERE, YOU CAN ALSO USE IMG with the same classes
								.background(data-pages-bg-image='/front/assets/images/hero_5.jpg', draggable='false')
						//- END IMAGE PARRALAX
						//- BEGIN CONTENT
						.content-layer
							.inner.full-height
								.container-xs-height.full-height
									.col-xs-height.col-middle.text-left
										.container.text-center
											h1.light.text-white(data-pages-animation='standard', data-delay='400', data-type='transition.slideDownIn')
												| Career
												br
												span.fs-16.font-montserrat.text-uppercase as
												br
												span.font-montserrat(data-pages-init='text-rotate', data-speed='1500', data-animation='fade') Software Engineer, DevOps Engineer, Data Analyst

						//- END CONTENT
					//- END SLIDE
				
				//- BEGIN ANIMATED MOUSE
				.mouse-wrapper
					.mouse
						.mouse-scroll
		//- END HERO WITH PARALLAX

